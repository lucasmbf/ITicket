@{
    ViewData["Title"] = "Home Page";
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Seu Título</title>

    <!-- CSS do Bootstrap (via CDN) -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.4.3/dist/css/bootstrap.min.css" rel="stylesheet">

    <!-- Biblioteca de ícones do Bootstrap (via CDN) -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet">

    <!-- JavaScript do Bootstrap (via CDN, necessário para alguns recursos do Bootstrap) -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.4.3/dist/js/bootstrap.bundle.min.js"></script>



</head>
<body>


    <!-- Formulario Modal de login -->    
    <div class="modal fade" id="loginModal" tabindex="-1" aria-labelledby="loginModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="loginModalLabel">Login</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <form asp-controller="Account" asp-action="ValidateLogin" method="post">
                        <div class="mb-3">
                            <label for="username" class="form-label">Username</label>
                            <input type="text" class="form-control" id="username" name="user">
                        </div>
                        <div class="mb-3">
                            <label for="password" class="form-label">Password</label>
                            <input type="password" class="form-control" id="password" name="senha">
                            <a href="#" class="d-block mt-2 text-decoration-none">Esqueci minha senha</a>
                        </div>
                        <button type="submit" class="btn btn-primary d-block mx-auto">Login</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
    <!-- Formulario Modal de login -->



    <div class="text-center">
        <h2>Consultar Chamado</h2>
        <br>
        <br>
        <form>
            <div class="form-group row">
                <label for="filtro" class="col-sm-2 col-form-label">Filtro:</label>
                <div class="col-sm-3">
                    <select class="form-control" id="filtro">
                        <option value="opcao1">Nr.Chamado</option>
                        <option value="opcao2">Data</option>
                        <option value="opcao3">SLA</option>
                        <option value="opcao3">Solicitante</option>
                        <option value="opcao3">Atendente</option>
                        <option value="opcao3">E-mail</option>
                    </select>
                    <br>

                </div>
                <div class="col-sm-4">
                    <div class="input-group">
                        <input type="text" class="form-control" id="texto-exemplo" placeholder="Nr.Chamado, Solicitante, SLA, etc.">
                    </div>
                </div>
            </div>
            <div class="form-group row">
                <label for="de" class="col-sm-2 col-form-label">De:</label>
                <div class="col-sm-3">
                    <div class="input-group date">
                        <input type="text" class="form-control" id="de">
                        <div class="input-group-append">
                            <button class="btn btn-outline-secondary px-2" type="button" id="deBtn"><i class="bi bi-calendar3"></i></button>
                        </div>
                    </div>
                </div>
                <label for="ate" class="col-sm-1 col-form-label">Até:</label>
                <div class="col-sm-3">
                    <div class="input-group date">
                        <input type="text" class="form-control" id="ate">
                        <div class="input-group-append">
                            <button class="btn btn-outline-secondary px-2" type="button" id="ateBtn"><i class="bi bi-calendar3"></i></button>
                        </div>
                    </div>
                </div>
                <div class="col-sm-2">
                    <button type="submit" class="btn btn-primary">Salvar</button>
                </div>
            </div>
        </form>

        <div class="container mt-5">
            <div class="text-center">
                <h2>Histórico de Chamados</h2>
            </div>
            <table class="table mt-3">
                <thead>
                    <tr>
                        <th scope="col">NR.CHAMADO</th>
                        <th scope="col">DATA DE ABERTURA</th>
                        <th scope="col">CRIADO POR</th>
                        <th scope="col">STATUS</th>
                        <th scope="col">SLA</th>
                    </tr>
                </thead>
                <tbody>
                    @for (int i = 1; i <= 10; i++) {
                        <tr>
                            <td></td>
                            <td></td>
                            <td></td>
                            <td></td>
                            <td></td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>



    </div>








    <!-- jQuery (necessário para o Bootstrap-datepicker) -->
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>

    <!-- Bootstrap-datepicker JS -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-datepicker/1.9.0/js/bootstrap-datepicker.min.js"></script>

    <!-- Seu script de inicialização do datepicker -->
    <script>
        $(document).ready(function () {
            $('#deBtn, #ateBtn').click(function () {
                $(this).closest('.input-group').find('input').datepicker('show');
            });

            $('#de, #ate').datepicker({
                format: 'dd/mm/yyyy',
                autoclose: true
            });
        });
    </script>
    <script>
        $(document).ready(function () {
            $('#loginModal').modal('show');

            $('#loginForm').submit(function (event) {
                event.preventDefault(); // Impede o envio do formulário

                var username = $('#username').val();
                var senha = $('#password').val();

                $.ajax({
                    url: '/Account/ValidateLogin',
                    type: 'POST',
                    data: { user: username, senha: senha },
                    success: function (data) {
                        // Redireciona o usuário para a página inicial se o login for bem-sucedido
                        window.location.href = data.redirectUrl;
                    },
                    error: function (xhr, status, error) {
                        // Exibe a mensagem de erro se o login falhar
                        $('#loginModal').modal('hide');
                        alert("Credenciais inválidas. Tente novamente.");
                    }
                });
            });
        });

    </script>



</body>
</html>
